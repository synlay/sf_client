[
    {sf_client, [
         {sf_rest_api_version, "37.0"}
        ,{sf_rest_api_endpoint, "cs83.salesforce.com"}

        ,{access_token_expiry, 3600}

        ,{access_token_server_request_retry_timeout, 3600}

        ,{credentials, [
             {client_id, ""}
            ,{client_secret, ""}
            ,{username, ""}
            ,{password, ""}
        ]}

        ,{sobjects_mapping, #{
             module => model_identifier
        }}
    ]}
    ,{lager, [
        {colored, true},
        {handlers, [
            {lager_console_backend, [
                debug,
                {lager_default_formatter, [time, color, " [", severity, "]", " [", pid, "]", " [", module, ":", function, ":", line, "] - ", message, "\e[0m\r\n"]}
            ]},
            {lager_file_backend, [
                {file, "log/error.log"},
                {level, error},
                {size, 10485760},
                {date, "$D0"},
                {count, 5},
                {formatter, lager_default_formatter},
                {formatter_config, [time, " [",severity,"]"," [",pid,"]"," [",module,":",function,":",line,"] - ",message, "\r\n"]}
            ]},
            {lager_file_backend, [
                {file, "log/console.log"},
                {level, info},
                {formatter, lager_default_formatter},
                {formatter_config, [time, " [",severity,"]"," [",pid,"]"," [",module,":",function,":",line,"] - ",message, "\r\n"]}
            ]}
        ]}
    ]}
].
